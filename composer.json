{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "dllobell/nanoid-plugin",
    "description": "A Composer plugin for the dllobell/nanoid package",
    "license": "MIT",
    "type": "composer-plugin",
    "keywords": [
        "nanoid"
    ],
    "authors": [
        {
            "name": "David Llobell",
            "email": "dllobellmoya@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/dllobell/php-nanoid-plugin",
    "require": {
        "php": "^8.4",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.9",
        "eolica/coding-standard": "^2.0",
        "pestphp/pest": "^4.0",
        "phpstan/phpstan": "^2.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Dllobell\\NanoId\\Plugin\\": "src"
        },
        "classmap": [
            "build/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Dllobell\\NanoId\\Plugin\\Tests": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "plugin-optional": true,
        "class": "Dllobell\\NanoId\\Plugin\\Plugin"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": [
            "ecs check"
        ],
        "lint-fix": [
            "ecs check --fix"
        ],
        "analyse": [
            "phpstan analyse"
        ],
        "test": [
            "pest --colors=always --parallel"
        ],
        "refactor": [
            "rector process"
        ]
    }
}
